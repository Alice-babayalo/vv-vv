                ],
                "responses": {
                    "200": {
                        "description": "successfully retrieved a list of all testimonies",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Albums not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }      
